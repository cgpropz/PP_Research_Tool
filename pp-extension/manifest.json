{
  "manifest_version": 3,
  "name": "CGEDGE PrizePicks Autofill",
  "version": "0.1.0",
  "description": "Auto-prefill PrizePicks slip from CGEDGE dashboard saved in localStorage (ppSlip).",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://www.prizepicks.com/*",
    "https://*.prizepicks.com/*",
    "https://app.prizepicks.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.prizepicks.com/*", "https://*.prizepicks.com/*", "https://app.prizepicks.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
